{
    "name": "lemonade/email-generator",
    "type": "library",
    "license": "MIT",
    "description": "A PHP library for generating emails using Twig templates.",
    "authors": [
        {
            "name": "Honza Mudrak",
            "email": "honzamudrak@gmail.com",
            "homepage": "https://github.com/johnnyxlemonade",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lemonade\\EmailGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lemonade\\EmailGenerator\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1 <8.5",
        "twig/twig": "^3.0",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}